<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAF9E6">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp">

        <ImageView
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:src="@drawable/barcode_logo"
            android:layout_gravity="center"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:text="PAYMENT STATUS"
            android:textSize="22sp"
            android:textStyle="bold"
            android:fontFamily="serif"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="16dp"/>

        <!-- Repeat for each court -->
        <TextView
            android:text="Iram Basketball Court"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#E6D8B9"
            android:padding="8dp"
            android:layout_marginTop="8dp"
            android:radius="12dp">

            <TextView
                android:text="KYLE SIBAYAN"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

            <TextView
                android:text="11:00 AM - 12:00 AM"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

            <TextView
                android:text="PENDING PAYMENT"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="#F44336"/>

            <TextView
                android:text="ONLINE PAYMENT - GCASH"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>
        </LinearLayout>
        <!-- End repeat -->
    </LinearLayout>
</ScrollView>