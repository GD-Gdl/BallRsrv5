<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAF9E6">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp">

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="383dp"
            android:layout_height="60dp"
            app:srcCompat="@drawable/screenshot_2025_05_08_005340" />

        <!-- Repeat for each court -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="16dp"
            android:fontFamily="serif"
            android:text="REQUESTS"
            android:textSize="22sp"
            android:textStyle="bold" />

        <TextView
            android:text="Iram Basketball Court"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"/>

        <!-- User requests for this court -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="#E6D8B9"
            android:orientation="horizontal"
            android:padding="8dp"
            android:radius="12dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="KYLE SIBAYAN" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="11:00 AM - 12:00 AM" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="4dp"
                android:backgroundTint="#4CAF50"
                android:text="ACCEPT"
                android:textColor="#FFF" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#F44336"
                android:text="DENY"
                android:textColor="#FFF" />


        </LinearLayout>
        <!-- End repeat -->
    </LinearLayout>
</ScrollView>