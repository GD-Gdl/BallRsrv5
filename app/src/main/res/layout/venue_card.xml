<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAF9E6">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Location 1 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="8dp">

            <ImageView
                android:id="@+id/image1"
                android:layout_width="202dp"
                android:layout_height="140dp"
                android:contentDescription="Location 1"
                android:src="@drawable/irisan" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingStart="16dp">

                <ImageView
                    android:id="@+id/imageView9"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/locationName1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Irisan Basketball Court"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/locationDistance1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2.5 km away"
                    android:textColor="#888888"
                    android:textSize="14sp" />
            </LinearLayout>
        </LinearLayout>

        <!-- Location 2 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="8dp">

            <ImageView
                android:id="@+id/image2"
                android:layout_width="205dp"
                android:layout_height="157dp"
                android:contentDescription="Location 2"
                android:src="@drawable/vincent" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingStart="16dp">

                <TextView
                    android:id="@+id/locationName2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="St. Vincent Basketball Gym"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/locationDistance2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5.0 km away"
                    android:textColor="#888888"
                    android:textSize="14sp" />
            </LinearLayout>

        </LinearLayout>

        <!-- Location 3 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="8dp">

            <ImageView
                android:id="@+id/image3"
                android:layout_width="204dp"
                android:layout_height="157dp"
                android:contentDescription="Location 3"
                android:src="@drawable/ymca_hostel_baguio06" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingStart="16dp">

                <TextView
                    android:id="@+id/locationName3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="YMCA Baasketball Court"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/locationDistance3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="7.8 km away"
                    android:textColor="#888888"
                    android:textSize="14sp" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</ScrollView>