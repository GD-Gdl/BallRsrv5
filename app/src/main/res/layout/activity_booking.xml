<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FAF9E6"
    android:gravity="center_horizontal">

    <ImageView
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:src="@drawable/barcode_logo"
        android:layout_marginTop="16dp"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:src="@drawable/basketball_court"
        android:scaleType="centerCrop"
        android:layout_margin="16dp"
        android:background="@drawable/rounded_image_bg"/>

    <TextView
        android:text="Iram Basketball Court: Pay w/ or w/o lights"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#333"
        android:textSize="16sp"
        android:layout_gravity="center"/>

    <LinearLayout
        android:orientation="vertical"
        android:background="#888"
        android:padding="24dp"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_gravity="center"
        android:radius="16dp">

        <TextView
            android:text="fee per hour : 750"
            android:textColor="#FFF"
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"/>

        <TextView
            android:text="Choose payment option"
            android:textColor="#FFF"
            android:textSize="14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_gravity="center"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="16dp">

            <Button
                android:text="GCASH"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#FAF9E6"
                android:textColor="#333"
                android:layout_marginEnd="16dp"/>

            <Button
                android:text="CASH"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#FAF9E6"
                android:textColor="#333"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>