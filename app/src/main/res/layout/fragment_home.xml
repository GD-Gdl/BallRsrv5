<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAF9E6">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Location 1 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:background="#FFF"
            android:elevation="2dp"
            android:orientation="vertical"
            android:padding="12dp">

            <ImageView
                android:id="@+id/image1"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ymca_hostel_baguio06" />

            <TextView
                android:id="@+id/locationName1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="YMCA Basketball Court"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/locationDistance1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="7.8 km away"
                android:textColor="#888888"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn1Book"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="#FAF9E6"
                    android:text="Book"
                    android:textColor="@color/black" />
            </LinearLayout>
        </LinearLayout>

        <!-- Location 2 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:background="#FFF"
            android:elevation="2dp"
            android:orientation="vertical"
            android:padding="12dp">

            <ImageView
                android:id="@+id/image2"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:scaleType="centerCrop"
                android:src="@drawable/irisan" />

            <TextView
                android:id="@+id/locationName2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Irisan Basketball Court"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/locationDistance2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2.5 km away"
                android:textColor="#888888"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn2Book"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="#FAF9E6"
                    android:text="Book"
                    android:textColor="@color/black" />
            </LinearLayout>
        </LinearLayout>

        <!-- Location 3 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:background="#FFF"
            android:elevation="2dp"
            android:orientation="vertical"
            android:padding="12dp">

            <ImageView
                android:id="@+id/image3"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:scaleType="centerCrop"
                android:src="@drawable/vincent" />

            <TextView
                android:id="@+id/locationName3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="St. Vincent Basketball Court"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/locationDistance3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5.0 km away"
                android:textColor="#888888"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn3Book"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="#FAF9E6"
                    android:text="Book"
                    android:textColor="@color/black" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView> 