<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FAF9E6">

    <ImageView
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:src="Screenshot 2025-05-08 005340"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_margin="16dp"
        android:hint="Search"
        android:padding="10dp"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Repeat this CardView for each venue -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_margin="12dp"
                android:background="#F5F2D0"
                app:cardCornerRadius="16dp">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="12dp">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:paddingStart="12dp">

                        <TextView
                            android:layout_width="250dp"
                            android:layout_height="wrap_content"
                            android:text="Iram Basketball Court"
                            android:textColor="#333"
                            android:textSize="12sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="127dp"
                            android:layout_height="wrap_content"
                            android:text="Available"
                            android:textColor="#4CAF50"
                            android:textSize="9sp" />

                        <TextView
                            android:layout_width="127dp"
                            android:layout_height="wrap_content"
                            android:text="3.2 km away"
                            android:textColor="#888"
                            android:textSize="8sp" />
                    </LinearLayout>

                    <Button
                        android:text="Reserve"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:backgroundTint="#E6D8B9"
                        android:textColor="#333"
                        android:layout_gravity="center_vertical"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <!-- End repeat -->
        </LinearLayout>
    </ScrollView>

    <!-- Bottom Navigation -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="#E6D8B9"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:baselineAligned="false"
            app:srcCompat="@drawable/screenshot_2025_05_08_010247" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="72dp"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/screenshot_2025_05_08_010255" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="68dp"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/screenshot_2025_05_08_010301" />

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="69dp"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/screenshot_2025_05_08_010314" />
    </LinearLayout>
</LinearLayout>