<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FAF9E6"
    android:gravity="center_horizontal">

    <TextView
        android:id="@+id/tvMode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:fontFamily="serif"
        android:text="Mode of Payment"
        android:textSize="20sp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/tvInstructions"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="24dp"
        android:background="#888"
        android:orientation="vertical"
        android:padding="24dp"
        android:radius="16dp">

        <!-- For GCASH -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="GCASH"
            android:textColor="#FFF"
            android:textSize="18sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            android:text="Please scan the QR code below"
            android:textColor="#FFF"
            android:textSize="14sp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/ivQRCode"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/gcashpayment"
        android:background="#E6D8B9"
        android:padding="16dp"
        android:contentDescription="GCash QR Code" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="216dp"
        android:layout_marginTop="16dp"
        android:background="#E6D8B9"
        android:orientation="vertical"
        android:padding="16dp"
        android:paddingHorizontal="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="8dp"
            android:text="Can you please input your reference code. After pushing the confirm button please input your reference code again to confirm booking, Thank you!"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/etReferenceCode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:background="#FFFFFF"
            android:hint="Enter reference code"
            android:inputType="text"
            android:padding="12dp" />

        <Button
            android:id="@+id/btnConfirmReference"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:backgroundTint="#FAF9E6"
            android:minHeight="48dp"
            android:text="Confirm Reference"
            android:textColor="#333" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="16dp"
        android:paddingHorizontal="16dp">

        <Button
            android:id="@+id/btnConfirmBooking"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:backgroundTint="#E6D8B9"
            android:text="Confirm Booking"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/btnBack"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#E6D8B9"
            android:text="Back"
            android:textColor="@color/black" />

    </LinearLayout>

</LinearLayout>